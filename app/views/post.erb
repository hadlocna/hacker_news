<div class="container">
<h1>This is the Post Page for:</h1>
<%@post = Post.find(params[:id])%>
<h2><%=@post.title%> by: <%=User.find_by_id(@post.user_id).name%><h4>

  <a href="/postVote/<%=params[:id]%>"> <img src="http://theykid.com/wp-content/thumbnails/605480_thumbs_up_with_clipping_path.jpg" width="32" height="32"> </a>
  Vote Count: <%=@post.postvotes.count %></h4></h2>
<!-- make name a hyperlink to profile -->
<h3><%=@post.body%></h3>

<p> <a href="/makeComment/<%=params[:id]%>" >Make a Comment</a></p>


<h3> Below are comments</h3>
<% comments = @post.comments %>
  <% comments.each do |comment| %>
  <p><%= comment.body%></p>
  <p>Author: <a href ="/profile/<%=comment.user_id%>"><%=User.find(comment.user_id).name%></a> <a href = "/commentVote/<%=params[:id]%>/<%=comment.id%>"><img src="http://theykid.com/wp-content/thumbnails/605480_thumbs_up_with_clipping_path.jpg" width="32" height="32" > </a>Vote Count: <%=comment.commentvotes.count %></p>
<%end%>
</div>